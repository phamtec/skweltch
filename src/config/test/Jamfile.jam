
project config-test
    : requirements
        <toolset>gcc:<c++-template-depth>300
        <toolset>darwin:<cxxflags>-ftemplate-depth-300
        <threading>multi
        <link>static
    :
    :
    ;

import testing ;

alias unit_test_framework
    : # sources
        /boost//unit_test_framework
    ;

# make aliases explicit so the libraries will only be built when requested
explicit unit_test_framework ;

lib log4cxx : : <name>log4cxx ;
lib apr : : <name>apr-1 <toolset>gcc ;
lib aprutil : : <name>aprutil-1 <toolset>gcc ;
lib expat : : <name>expat <toolset>gcc ;

unit-test config.test
 	: configtest.cpp
 		/config//config
 		/boost/test
 		log4cxx apr aprutil expat
 	:   <include>../../turtle-1.2.2/include
		<include>../../json_spirit_v4.06/json_spirit
 	:
 	;


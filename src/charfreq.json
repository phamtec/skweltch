{
	"pidFile": "tasks.pid",
	
	// this is what is used to feed the machine.
	// always one of them.
	"vent" : {
		"name": "VentWords",
		"exe": "dist/ventwords",
		"node": "localhost",
		"connections": {
			"pushTo": {
				"direction": "to",
				"mode":"bind",
				"address": "*",
				"port": 5557
			},
			"syncTo": {
				"direction": "to",
				"mode":"connect",
				"block": "SinkCharFreq",
				"connection": "pullFrom"
			}
		},
		"config" : {
			"filename": "data/words.txt",
			"sleep": 5,
			"every": 2000
		}
	},
	
	"sink" : {
		"name": "SinkCharFreq",
		"exe": "dist/sinkcharfreq",
		"node": "localhost",
		"connections": {
			"pullFrom": {
				"direction": "from",
				"mode":"bind",
				"address": "*",
				"port": 5558
			}
		},
		"config" : {
		}
	},
	
	// these are all run in the background and remembered.
	"background": [
		{
			"count": 1,
//			"count": 3,
			"name": "WorkCharFreq",
			"exe": "dist/workcharfreq",
			"node": "localhost",
			"connections": {
				"pullFrom": {
					"direction": "from",
					"mode":"connect",
					"block": "VentWords",
					"connection": "pushTo"
				},
				"pushTo": {
					"direction": "to",
					"block": "SinkCharFreq",
					"mode":"connect",
					"connection": "pullFrom"
				}
			},
			"config" : {
			}
		}
	],
	
	// and this is what is used to reap.
	"reap": {
		"name": "GrimReaper",
		"exe": "dist/grimreaper",
		"config" : {
			"totalTime": 4000
		}
	}
		
}

{
	// this is what is used to feed the machine.
	// always one of them.
	"vent": "VentWords",
	
	"blocks" : [
		{
			"name": "VentWords",
			"exe": "./ventwords",
			"node": "localhost",
			"connections": {
				"pushTo": {
					"direction": "to",
					"mode":"bind",
					"address": "*",
					"port": 5557
				},
				"syncTo": {
					"direction": "to",
					"mode":"connect",
					"block": "SinkCharFreq",
					"connection": "pullFrom"
				}
			},
			"config" : {
				"filename": "../data/words.txt",
				"sleep": 5,
				"every": 2000
			}
		},
		{
			"name": "SinkCharFreq",
			"exe": "./sinkcharfreq",
			"node": "localhost",
			"connections": {
				"pullFrom": {
					"direction": "from",
					"mode":"bind",
					"address": "*",
					"port": 5558
				}
			},
			"config" : {
			}
		},
		{
			"count": 3,
			"name": "WorkCharFreq",
			"exe": "./workcharfreq",
			"node": "localhost",
			"connections": {
				"pullFrom": {
					"direction": "from",
					"mode":"connect",
					"block": "VentWords",
					"connection": "pushTo"
				},
				"pushTo": {
					"direction": "to",
					"block": "SinkCharFreq",
					"mode":"connect",
					"connection": "pullFrom"
				}
			},
			"config" : {
			}
		}
	]
		
}

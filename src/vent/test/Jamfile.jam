
project vent-test
    : requirements 
        <toolset>gcc:<c++-template-depth>300
        <toolset>darwin:<cxxflags>-ftemplate-depth-300
        <threading>multi
        <link>static
    :
    :
    ;

import testing ;

alias unit_test_framework
    : # sources
        /boost//unit_test_framework
    ;        

# make aliases explicit so the libraries will only be built when requested
explicit unit_test_framework ;

lib log4cxx : : <toolset>gcc:<file>/usr/lib64/liblog4cxx.so <toolset>darwin:<name>log4cxx ;
lib apr : : <toolset>ignore:<name>apr-1 ;
lib aprutil : : <toolset>ignore:<name>aprutil-1 ;
lib expat : : <toolset>ignore:<name>expat ;

unit-test words.test
	: wordstest.cpp ../WordSplitter.cpp
		/boost/test
	:  <include>../../turtle-1.2.2/include 
	:
	;

unit-test xpath.test
	: xpathtest.cpp ../XmlParser.cpp ../XPathSplitter.cpp
		/boost/test
		log4cxx apr aprutil expat
	:  <include>../../turtle-1.2.2/include 
	:
	;

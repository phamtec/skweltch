{
	"pidFile": "tasks.pid",

	// this is what is used to feed the machine. 100 at a time.
	"vent" : {
		"name": "VentRandomNum",
		"exe": "dist/ventrandomnum",
		"node": "localhost",
		"connections": {
			"pushTo": {
				"direction": "to",
				"mode":"bind",
				"address": "*",
				"port": 5557
			},
			"syncTo": {
				"direction": "to",
				"mode":"connect",
				"block": "SinkElapsed",
				"connection": "pullFrom"
			}
		},
		"config" : {
			"count": 50,
			"low": 1,
			"high": 10,
			"sleep": 0
		}
	},

	"sink" : {
		"name": "SinkElapsed",
		"exe": "dist/sinkelapsed",
		"node": "localhost",
		"connections": {
			"pullFrom": {
				"direction": "from",
				"mode":"bind",
				"address": "*",
				"port": 5559
			}
		},
		"config" : {
		}
	},

	// these are all run in the background and remembered.
	"background": [
		{
			"count": 3,
			"name": "WorkSleep",
			"exe": "dist/worksleep",
			"node": "localhost",
			"connections": {
				"pullFrom": {
					"direction": "from",
					"mode":"connect",
					"block": "VentRandomNum",
					"connection": "pushTo"
				},
				"pushTo": {
					"direction": "to",
					"block": "SinkElapsed",
					"mode":"connect",
					"connection": "pullFrom"
				}
			},
			"config" : {
			}
		}
	],

	// and this is what is used to reap.
	"reap": {
		"name": "GrimReaper",
		"exe": "dist/grimreaper",
		"config" : {
			"pidFile": "tasks.pid",
			"totalTime": 400
		}
	}

}

{
	"pidFile": "tasks.pid",

	"pipes": {
		 "pipe1": {
			"node": "localhost",
			"port": 5558
		},
		"pipe2": {
			"node": "localhost",
			"port": 5557
		},
		"pipe3": {
			"node": "localhost",
			"port": 5559
		}
	},

	// these are all run in the background and remembered.
	"background": [
		{
			"count": 3, // need 3 of these. first arg to the program is the id.
			"name": "WorkSleep",
			"exe": "dist/worksleep",
			"sighup": true,
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe2",
						"direction": "from",
						"mode":"connect"
					},
					"pushTo": {
						"pipe": "pipe1",
						"direction": "to",
						"mode":"connect"
					}
				}
			}
		},
		{
			// only 1 of these, we sample 100 messages that can come through.
			"name": "SinkElapsed",
			"exe": "dist/sinkelapsed",
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe1",
						"direction": "from",
						"mode":"bind"
					}
				},
				"expect": 50
			}
		}
	],

	// this is what is used to feed the machine. 100 at a time.
	"vent" : {
		"name": "VentRandomNum",
		"exe": "dist/ventrandomnum",
		"config" : {
			"connections": {
				"pushTo": {
					"pipe": "pipe2",
					"direction": "to",
					"mode":"bind"
				},
				"syncTo": {
					"pipe": "pipe1",
					"direction": "to",
					"mode":"connect"
				}
			},
			"count": 100,
			"low": 1,
			"high": 50,
			"sleep": 5
		}
	},

	// and this is what is used to reap.
	"reap": {
		"name": "GrimReaper",
		"exe": "dist/grimreaper",
		"config" : {
			"connections": {
				"pullFrom": {
					"pipe": "pipe3",
					"direction": "from",
					"mode":"bind"
				}
			},
			"pidFile": "tasks.pid",
			"totalTime": 2000
		}
	}

}

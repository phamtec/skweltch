{
	"pidFile": "tasks.pid",
	
	"pipes": {
		 "pipe1": {
			"node": "localhost",
			"port": 5558
		},
		"pipe2": {
			"node": "localhost",
			"port": 5557
		},
		"pipe3": {
			"node": "localhost",
			"port": 5559
		}
	},
	
	// these are all run in the background and remembered.
	"background": [
		{
			"count": 3, // need 3 of these. first arg to the program is the id.
			"name": "WorkSleep",
			"exe": "./work/bin/darwin-4.2.1/debug/threading-multi/worksleep",
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe2",
						"direction": "from" 
					},
					"pushTo": {
						"pipe": "pipe1",
						"direction": "to" 
					}
				}
			}
		},
		{
			// only 1 of these, we sample 100 messages that can come through.
			"name": "SinkElapsed",
			"exe": "./sink/bin/darwin-4.2.1/debug/threading-multi/sinkelapsed",
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe1",
						"direction": "from" 
					}
				},
				"expect": 50
			}
		}
	],
	
	// this is what is used to feed the machine. 100 at a time.
	"vent" : {
		"name": "VentRandomNum",
		"exe": "./vent/bin/darwin-4.2.1/debug/threading-multi/ventrandomnum",
		"config" : {
			"connections": {
				"pushTo": {
					"pipe": "pipe2",
					"direction": "to" 
				},
				"syncTo": {
					"pipe": "pipe1",
					"direction": "to" 
				}
			},
			"count": 100,
			"low": 1,
			"high": 50,
			"sleep": 5
		}
	},
	
	// and this is what is used to reap.
	"reap": {
		"name": "GrimReaper",
		"exe": "./reap/bin/darwin-4.2.1/debug/threading-multi/grimreaper",
		"config" : {
			"connections": {
				"pullFrom": {
					"pipe": "pipe3",
					"direction": "from" 
				}
			},
			"pidFile": "tasks.pid",
			"totalTime": 2000
		}
	}
		
}

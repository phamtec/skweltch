{
	"pidFile": "tasks.pid",
	
	"pipes": {
		"pipe1": {
			"node": "localhost",
			"port": 5558
		},
		"pipe2": {
			"node": "localhost",
			"port": 5557
		},
		"pipe3": {
			"node": "localhost",
			"port": 5559
		},
		"pipe4": {
			"node": "localhost",
			"port": 5560
		}
	},
	
	// these are all run in the background and remembered.
	"background": [
		{
			"count": 3,
			"name": "WorkCharCount",
			"exe": "dist/workcharcount",
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe2",
						"direction": "from",
						"mode":"connect"
					},
					"pushTo": {
						"pipe": "pipe1",
						"direction": "to",
						"mode":"connect"
					}
				}
			}
		},
		{
			"name": "PipeDumpIntoSink",
			"exe": "dist/pipedump",
			"config" : {
				"connections": {
					"pipeFrom": {
						"pipe": "pipe1",
						"direction": "from" ,
						"mode": "bind"
					},
					"pipeTo": {
						"pipe": "pipe4",
						"direction": "to",
						"mode": "connect"
					}
				},
				"every": 1000
			}
		},
		{
			"name": "SinkAvg",
			"exe": "dist/sinkavg",
			"config" : {
				"connections": {
					"pullFrom": {
						"pipe": "pipe4",
						"direction": "from",
						"mode":"bind"
					}
				},
				// this needs to be derived by sending a "finished" message.
				"expect": 4505
			}
		}
	],
	
	// this is what is used to feed the machine.
	"vent" : {
		"name": "VentWords",
		"exe": "dist/ventwords",
		"config" : {
			"connections": {
				"pushTo": {
					"pipe": "pipe2",
					"direction": "to",
					"mode":"bind"
				},
				"syncTo": {
					"pipe": "pipe1",
					"direction": "to",
					"mode":"connect"
				}
			},
			"filename": "data/words.txt",
			"sleep": 0
		}
	},
	
	// and this is what is used to reap.
	"reap": {
		"name": "GrimReaper",
		"exe": "dist/grimreaper",
		"config" : {
			"connections": {
				"pullFrom": {
					"pipe": "pipe3",
					"direction": "from",
					"mode":"bind"
				}
			},
			"pidFile": "tasks.pid",
			"totalTime": 2000
		}
	}
		
}

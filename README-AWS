Skweltch on AWS
---------------

# all the things we need.
sudo yum install git-core zlib-devel bzip2-devel gcc gcc-c++ autoconf libtool apr-devel apr-util-devel

cd /opt
sudo -s

# log4cxx
curl -O http://dl.fedoraproject.org/pub/epel/6/x86_64/log4cxx-0.10.0-13.el6.x86_64.rpm
curl -O http://dl.fedoraproject.org/pub/epel/6/x86_64/log4cxx-devel-0.10.0-13.el6.x86_64.rpm
rpm -Uvh log4cxx-0.10.0-13.el6.x86_64.rpm
rpm -Uvh log4cxx-devel-0.10.0-13.el6.x86_64.rpm

# boost
# get and install boost
curl -O http://aarnet.dl.sourceforge.net/project/boost/boost/1.54.0/boost_1_54_0.tar.gz
tar xzf boost_1_54_0.tar.gz
cd boost_1_54_0
./bootstrap.sh --with-toolset=gcc 
./b2 install --without-mpi --without-log --without-graph --without-graph_parallel --without-signals --without-coroutine --without-python --without-wave --link-static --threading-multi
cd tools/build/v2
./bootstrap.sh
./b2 install
cd /opt/boost_1_54_0
chown -R ec2-user:ec2-user *
exit

# put the rest in a tools dir owned by us.
sudo mkdir tools
sudo chown ec2-user:ec2-user tools
cd tools

# 0MQ
curl -O http://download.zeromq.org/zeromq-3.2.3.tar.gz
tar xzf zeromq-3.2.3.tar.gz
cd zeromq-3.2.3
./configure
make
sudo make install

# C0MQ
cd /opt/tools
curl -O http://download.zeromq.org/czmq-1.4.1.tar.gz
tar xzf czmq-1.4.1.tar.gz
cd czmq-1.4.1
./configure
make
sudo make install

# msgpack
cd /opt/tools
git clone https://github.com/msgpack/msgpack-c.git
cd msgpack-c
./bootstrap
./configure
make
sudo make install

# our code
git clone https://phamtec@github.com/phamtec/skweltch.git
cd skweltch
b2 toolset=gcc release



